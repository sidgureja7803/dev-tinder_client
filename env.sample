# Frontend Environment Variables for MergeMates
# Copy this file to .env and fill in your actual values

# ===========================================
# API Configuration
# ===========================================
VITE_API_BASE_URL=http://localhost:7777

# ===========================================
# Firebase Configuration (Frontend)
# ===========================================
# Get these from Firebase Console > Project Settings > General > Your apps > Web app config
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# ===========================================
# AI Services (Novita AI) - OPTIONAL
# ===========================================
# Frontend chatbot will work with fallback responses if not provided
# Only add these if you want enhanced AI responses in the chatbot
# Get from Novita AI Dashboard > API Keys
VITE_NOVITA_AI_API_KEY=your_novita_ai_api_key_here
VITE_NOVITA_AI_BASE_URL=https://api.novita.ai/v3/openai
VITE_NOVITA_AI_MODEL=meta-llama/llama-3.1-70b-instruct

# ===========================================
# Development Settings
# ===========================================
VITE_ENV=development
VITE_DEBUG=true

# ===========================================
# App Configuration
# ===========================================
VITE_APP_NAME=MergeMates
VITE_APP_URL=http://localhost:5173
VITE_APP_DOMAIN=localhost:5173

# ===========================================
# Production Settings (uncomment for production)
# ===========================================
# VITE_ENV=production
# VITE_DEBUG=false
# VITE_API_BASE_URL=https://your-backend-domain.com
# VITE_APP_URL=https://your-frontend-domain.com
# VITE_APP_DOMAIN=your-frontend-domain.com 